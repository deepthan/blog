<%
var hashCode = function (str) {
    if (!str && str.length === 0) {
        return 0;
    }

    var hash = 0;
    for (var i = 0, len = str.length; i < len; i++) {
        hash = ((hash << 5) - hash) + str.charCodeAt(i);
        hash |= 0;
    }
    return hash;
};

var featureimg = '/medias/featureimages/0.jpg';
var featureImages = theme.featureImages;
%>
<style>
  .card{
    padding-top: 20px;
  }
  #prenext-posts{
    margin-top: 124px;
  }
  .article{
    position: relative;
  }
  .left-badge{
    position: absolute;
    left: 11px;
    top: 0;
  }
</style>
<article id="prenext-posts" class="prev-next articles">
    <div class="row article-row">
        <% if (page.prev) { %>
        <div class="article col s12 m6" >
            <div class="article-badge left-badge text-color">
                <i class="fa fa-chevron-left"></i>&nbsp;<%= __('prev') %></div>
            <div class="card">
                <a href="<%- url_for(page.prev.path) %>">
                    <div class="card-image">
                        <% if (page.prev.img) { %>
                        <img src="<%= page.prev.img %>" class="responsive-img" alt="<%- page.prev.title %>">
                        <% } else { %>
                        <%
                            var len = featureImages.length;
                            var num = Math.abs(hashCode(page.prev.title) % len);
                            featureimg = featureImages[num];
                        %>
                        <div class="title">
                            <%- page.prev.title %>
                        </div>
                        <% } %>
                    </div>
                </a>
                <div class="card-content article-content">
                    <div class="summary"><%- strip_html(page.prev.content).substring(0, 120)+ '...' %></div>
                    <div class="publish-info">
                        <span class="publish-date">
                            <i class="fa fa-clock-o fa-fw icon-date"></i><%= date(page.prev.date, config.date_format) %>
                        </span>
                        <span class="publish-author">
                            <% if (page.prev.categories && page.prev.categories.length > 0) { %>
                            <i class="fa fa-bookmark fa-fw icon-category"></i>
                            <% page.prev.categories.forEach(category => { %>
                            <a href="<%- url_for(category.path) %>" class="post-category" target="_blank">
                                    <%- category.name %>
                                </a>
                            <% }); %>
                            <% } else if (page.prev.author && page.prev.author.length > 0) { %>
                            <i class="fa fa-user fa-fw"></i>
                            <%- page.prev.author %>
                            <% } else { %>
                            <i class="fa fa-user fa-fw"></i>
                            <%- config.author %>
                            <% } %>
                        </span>
                    </div>
                </div>
            </div>
        </div>
